
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents
    match /{document=**} {
      allow read: if true;
    }
    
    // Courses collection - admin and authenticated users can write
    match /courses/{courseId} {
      allow write: if true; // Temporary open access for development
    }
    
    // Certificates collection - authenticated users can write
    match /certificates/{certificateId} {
      allow write: if true; // Temporary open access for development
    }
    
    // User roles collection
    match /user_roles/{roleId} {
      allow write: if true; // Temporary open access for development
    }
    
    // NFT certificates collection
    match /nft_certificates/{nftId} {
      allow write: if true; // Temporary open access for development
    }
    
    // Organizations collection
    match /organizations/{orgId} {
      allow write: if true; // Temporary open access for development
    }
  }
}
